<Window x:Class="PL.Employee.AgentEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Employee"
        mc:Ignorable="d"
        Title="AgentEmployeeWindow" Height="450" Width="800"
        DataContext="{Binding CurrentEmployee, RelativeSource={RelativeSource Self}, Mode=TwoWay}">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/managerWindowBackround.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Label Content="CurrentTask.Id:" Grid.Row="0" Width="258" Height="54" FontSize="30" Margin="71,45,71,46" />
        <Label Content="CurrentTask.Alias:" Grid.Row="1"  Width="294" Height="61" FontSize="30" Margin="53,42,53,41"/>
        <Button Content="Current Task details" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Height="115" Width="250" Click="btnTaskDetails_Click" FontSize="25" Margin="75,144,27,0" Grid.RowSpan="2"/>
        <Button Content="Available Tasks" Grid.Row="2" Grid.Column="0" Height="115" Width="250" Click="btnAvailableTasks_Click" Margin="75,15,75,15"/>

        <TextBox Grid.Row="0" Grid.Column="1"
         Text="{Binding CurrentEmployee.Id, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}"
         HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Height="18"/>

        <TextBox Grid.Row="1" Grid.Column="1"
        Text="{Binding CurrentEmployee.CurrentTask.Alias, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}"
        HorizontalAlignment="Left" Margin="50,20,0,0"  VerticalAlignment="Top" Width="140" Height="17" TextWrapping="Wrap"/>
    </Grid>
</Window>
