<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize"
             Value="20"/>
            <Setter Property="FontFamily"
              Value="Ariel"/>
            <Setter Property="FontWeight"
           Value="Bold"/>

        </Style>

    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/mainwindowbackround.jpg" Opacity="0.7"/>
        </Grid.Background>
        <!--A Botton for all agent content-->
        <Button Content="Handle Agents" HorizontalAlignment="Left" Margin="160,90,0,0" VerticalAlignment="Top" Height="100" Width="200" Click="btnAgents_Click"/>
        <!--A button for Initialization-->
        <Button Content="Initialize Data" HorizontalAlignment="Left" Margin="400,90,0,0" VerticalAlignment="Top" Height="100" Width="200" Click="btnInitialize_Click"/>
        <!--Reset button-->
        <Button Content="Reset Data" HorizontalAlignment="Left" Margin="400,230,0,0" VerticalAlignment="Top" Height="100" Width="200" Click="btnReset_Click"/>
    </Grid>
</Window>
