          HorizontalAlignment="Left" Margin="50,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="60" RenderTransformOrigin="0.478,0.134"/>

            <Label Content="Complexity:" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" Margin="50,7,0,0" VerticalAlignment="Top" Height="28" Width="120"/>
